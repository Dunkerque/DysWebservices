<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} - Maties Systems</title>
        {% block stylesheets %}
        {% endblock %}
        <link href='https://fonts.googleapis.com/css?family=Oxygen|Cabin|Droid+Sans' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.css"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/fontawesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/nav.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/boutons.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/effets.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/formulaire.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/site.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/seance.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/profil.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/slick.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/main_logo.png') }}" />
    </head>
    <body id="top">
        {% block body %}
            <nav class="barre-nav">
                <img id="logo" src="{{ asset('assets/img/main_logo.png') }}" alt="logo"/>
                <button class="button button-nav button-accueil" type="button"><i class="fa fa-home"></i> Accueil </button>
                <button class="button button-nav button-profil" type="button"><i class="fa fa-user"></i> Bonjour {% block nom_user %}{% endblock %}</button>
                <button class="button button-nav button-deconnexion" type="button"><i class="fa fa-power-off"></i></button>
            </nav>
            <div class="form-disconnect">
                <div class="form-disconnect-content">
                    <h4>Se déconnecter ?</h4>
                    <button class="button button-deconnexion-validation" type="button">Se déconnecter</button><button class="button button-deconnexion-annulation" type="button">Rester connecté</button>
                </div>
            </div>
            {% block main %}
            {% endblock %}
        {% endblock %}
        <footer class="footer">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <img id="logo" src="{{ asset('assets/img/main_logo.png') }}" alt="logo"/>
                </div>
                <div class="col-lg-6 col-md-6 hidden-sm hidden-xs">
                    From scratch, obviously.
                </div>
                <div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
                    <button type="button" class="button button-contact">Contactez-nous</button>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="{{ asset('assets/bootstrap/js/jquery.js') }}"></script>
        <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.5.9/slick.min.js"></script>
        <script type="text/javascript" src="{{ asset('assets/bootstrap/js/bootstrap.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/js/fonctions.js') }}"></script>
        {% block javascripts %}{% endblock %}
            <script type="text/javascript">
                $(document).ready(function(){
                    $('body').fadeIn(500);
                    //scroller('#top');
                    $('#logo').click(function(){
                        document.location.reload();
                    });


                    $('.button-deconnexion').click(function(){
                        $('.form-disconnect').fadeIn();
                        $('.button-deconnexion-validation').click(function(){
                            document.location.href="{{ path('site_user_disconnect') }}";
                        });
                        $('.button-deconnexion-annulation').click(function(){
                            $('.form-disconnect').fadeOut();
                        });
                    });

                    $('.button-profil').click(function(){
                        document.location.href="{{ path('site_profil') }}";
                    });

                    $('.button-accueil').click(function(){
                        document.location.href="{{ path('site_home') }}";
                    });
                });
            </script>
    </body>
</html>
