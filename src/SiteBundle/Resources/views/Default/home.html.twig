											{{ seance.start_seance }}<br/>
											<i class="fa fa-calendar"></i>
											{{ seance.end_seance }}
										</div>
										<div class="seance-description-places">
											{{ seance.nbr_place }} places restantes
										</div>
										<div class="seance-description-auteur">
											Postée par: {{ seance.id_organizer.first_name }} {{ seance.id_organizer.last_name }}
										</div>
									</div>
