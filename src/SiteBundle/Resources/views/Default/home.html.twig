									<img src="{{ seance.id_film.image }}" alt="affiche"/>
									<div class="seance-description">
										<div class="seance-description-titre">{{ seance.id_film.title }}</div>
										<div class="seance-description-category"><label>Categorie:</label> {{ seance.id_film.category }}</div>
										<div class="seance-description-resume">{{ seance.id_film.description }}</div>
										<div class="seance-description-horaires">
