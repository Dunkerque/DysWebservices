{% block javascripts %}
	<script type="text/javascript">
		$(document).ready(function(){

			$('.barre-nav').css("opacity", 0);

			$('.agaga').slick({
				dots: false,
				infinite: true,
				speed: 300,
				slidesToShow: 3,
				autoplay: true,
  				autoplaySpeed: 5000,
				centerMode: true
			});

			$('.slick-prev').html('<i class="fa fa-angle-left"></i>');
			$('.slick-next').html('<i class="fa fa-angle-right"></i>');

			$('body').on('click', '.go-all-seances', function(){
				scroller('#debut-page');
			});

			$('.seance-layout').mouseover(function(){
				$("body").css("overflow","hidden");
			}).mouseout(function(){
				$("body").css("overflow","auto");
			});

			setTimeout(function(){
				resizeHome();
				$('.seance-titre-film').css("height", "0");
				$('.seance-titre-film').css("padding", "0");
			}, 800);

		});
	</script>
